<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_new_entry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.money.conatusadminapp.MagazineGaller.CreateNewEntryActivity">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/add_btn"
        android:id="@+id/create_new_entry_image"/>
    <EditText
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:background="@drawable/background"
        android:layout_below="@id/create_new_entry_image"
        android:hint="Enter Title ..."
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/create_new_entry_title"/>

    <Button
        android:layout_width="match_parent"
        android:text="CREATE"
        android:textColor="#ffffff"
        android:id="@+id/create_new_entry_submit_button"
        android:textSize="25sp"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
